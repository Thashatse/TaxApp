@model Model.TravelLog

@{
    ViewBag.Title = "Delete Travle Log Item";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Header -->
<div class="header bg-gradient-primary py-7 py-lg-8">
    <div class="container">
        <div class="header-body text-center mb-7">
            <div class="row justify-content-center">
                <div class="col-lg-5 col-md-6">
                    <h3 class="text-white">Are you sure you want to delete this?</h3>
                    <h1 class="text-white">
                        @Html.DisplayFor(model => model.Reason)
                    </h1>
                    <br />
                    <p class="text-white">For @Html.DisplayFor(model => model.JobTitle)</p>
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-actions no-color">
                            <input type="submit" value="Delete" class="btn btn-danger" />
                                   |
                            <a class="text-white" href='./TravleLogItem?ID=@Html.DisplayFor(modelItem => Model.ExpenseID)'> Cancel </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid mt--7">