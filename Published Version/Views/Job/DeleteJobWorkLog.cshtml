@model Model.Worklog

@{
    ViewBag.Title = "Delete Work Log Item";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Header -->
<div class="header bg-gradient-primary py-7 py-lg-8">
    <div class="container">
        <div class="header-body text-center mb-7">
            <div class="row justify-content-center">
                <div class="col-lg-5 col-md-6">
                    <h1 class="text-white">
                        Delete Job Work Log Item: @Html.DisplayFor(model => model.Description)
                    </h1>
                    <h3 class="text-white">Are you sure you want to delete this?</h3>
                    <br />
                    <div class="form-actions no-color">
                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <input type="submit" value="Delete" class="btn btn-danger" /> 
                        <a class="text-white" href="http://sict-iis.nmmu.ac.za/TaxApp/job/JobWorkLog?ID=@ViewBag.JobID"> | Cancel </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid mt--7">