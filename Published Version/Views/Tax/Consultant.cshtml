@model Model.ConsultantViewModel

@{
    ViewBag.Title = "Tax Consultant";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Header -->
<div class="header bg-gradient-primary py-7 py-lg-8">
    <div class="container">
        <div class="header-body text-center mb-7">
            <div class="row justify-content-center">
                <div class="col-lg-5 col-md-6">
                    <h1 class="text-white">Tax Consultant</h1>
                    <div>
                            <a href="/Tax/EditConsultant"
                               class="btn btn-white">Edit</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid mt--7">
            <div class="col-lg-12 col-md-12">
                <div class="card bg-secondary shadow border-0">
                    <div>
                        <table class="table align-items-center table-flush">
                            <tbody>
                                <tr>
                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.Consultant.Name):
                                    </th>
                                    <td>
                                        @Html.DisplayFor(model => model.Consultant.Name)
                                    </td>
                                    <td></td>
                                </tr>
                                <tr>
                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.Consultant.EmailAddress):
                                    </th>
                                    <td>
                                        @Html.DisplayFor(model => model.Consultant.EmailAddress)
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
    <br />
    
    <div class="col-lg-12 col-md-12">
        <div class="card shadow">
            <div class="card-header bg-transparent" data-toggle="collapse" href="#TAX">
                <div class="row align-items-center">
                    <div class="col">
                        <h3 class="mb-0">Tax Periods: </h3>
                    </div>
                    <div class="col text-right">
                        <a href="/Tax/TaxVatPeriod?Type=T"
                           class="btn btn-white">New Tax Period</a>

                        <i class="ni ni-bold-down"></i>
                    </div>
                </div>
            </div>
            <div id="TAX" class="panel-collapse collapse">
                <div class="card-body">
                    <div class="table-responsive">
                        @if (Model.taxPeriod.Count < 1)
                        {
                            <p> No Tax Periods</p>
                        }
                        else
                        {
                            <table class="table align-items-center table-flush">
                                <tr>
                                    <th>
                                        Tax Period
                                    </th>
                                    <th>
                                        Shared
                                    </th>
                                    <th></th>
                                </tr>
                                @foreach (var item in Model.taxPeriod)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PeriodString)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Share)
                                        </td>
                                        <td>
                                            <a href="/Tax/EditTaxVatPeriod?Type=T&Period=@item.PeriodID&ReturnToConsultant=true"
                                               class="btn btn-white">Edit Period</a>

                                            @if (item.Share == true)
                                            {
                                            <a href="/Tax/Share?ID=@item.PeriodID&type=T&ReturnToConsultant=true"
                                               class="btn btn-white">Stop sharing Period with Consultant</a>
                                            }
                                            else
                                            {
                                            <a href="/Tax/Share?ID=@item.PeriodID&type=T&ReturnToConsultant=true"
                                               class="btn btn-white">Share Period with Consultant</a>
                                            }
                                        </td>
                                    </tr>
                                }
                            </table>
                        }
                    </div>
                </div>
            </div>
        </div>
        <br />
    </div>

    <div class="col-lg-12 col-md-12">
        <div class="card shadow">
            <div class="card-header bg-transparent" data-toggle="collapse" href="#VAT">
                <div class="row align-items-center">
                    <div class="col">
                        <h3 class="mb-0">Vat Periods: </h3>
                    </div>
                    <div class="col text-right">
                        <a href="/Tax/TaxVatPeriod?Type=V"
                           class="btn btn-white">New VAT Period</a>
                        <i class="ni ni-bold-down"></i>
                    </div>
                </div>
            </div>
            <div id="VAT" class="panel-collapse collapse"> 
                <div class="card-body">
                    <div class="table-responsive">
                        @if (Model.vatPeriod.Count < 1)
                        {
                            <p> No VAT Periods</p>
                        }
                        else
                        {
                            <table class="table align-items-center table-flush">
                                <tr>
                                    <th>
                                        VAT Period
                                    </th>
                                    <th>
                                        Shared
                                    </th>
                                    <th></th>
                                </tr>
                                @foreach (var item in Model.vatPeriod)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PeriodString)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Share)
                                        </td>
                                        <td>
                                            <a href="/Tax/EditTaxVatPeriod?Type=V&Period=@item.PeriodID&ReturnToConsultant=true"
                                               class="btn btn-white">Edit Period</a>

                                            @if (item.Share == true)
                                            {
                                                <a href="/Tax/Share?ID=@item.PeriodID&type=V&ReturnToConsultant=true"
                                                   class="btn btn-white">Stop sharing Period with Consultant</a>
                                            }
                                            else
                                            {
                                                <a href="/Tax/Share?ID=@item.PeriodID&type=V&ReturnToConsultant=true"
                                                   class="btn btn-white">Share Period with Consultant</a>
                                            }
                                        </td>
                                    </tr>
                                }
                            </table>
                        }
                    </div>
                </div>
            </div>
        </div>
        <br />
    </div>