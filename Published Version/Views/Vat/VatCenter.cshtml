@model Model.VatCenter

@{
    ViewBag.Title = "Vat Center";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="header bg-gradient-primary pb-8 pt-5 pt-md-8">
    <div class="container-fluid">
        <div class="header-body">
            <!-- Card stats -->
            <div class="row">
                <div class="col-xl-4 col-lg-6">
                    <div class="card card-stats mb-4 mb-xl-0">
                        <div class="card-body">
                            <div class="row">
                                <div class="col">
                                    <h5 class="card-title text-uppercase text-muted mb-0">VAT Received (Current VAT Period)</h5>
                                    <span class="h2 font-weight-bold mb-0">R @Model.VATDashboard.VATRECEIVEDString </span>
                                </div>
                                <div class="col-auto">
                                    <div class="icon icon-shape bg-green text-white rounded-circle shadow">
                                        <i class="ni ni-money-coins"></i>
                                    </div>
                                </div>
                            </div>
                            @if (@Model.VATDashboard.VATRECEIVEDPercent == -999999999)
                            {
                                <p class="mt-3 mb-0 text-muted text-sm">
                                    <span class="text-success mr-2">
                                        <i class="fa fa-arrow-up"></i>
                                    </span>
                                    <span class="text-nowrap">Since last VAT Period</span>
                                </p>
                            }
                            else if (@Model.VATDashboard.VATRECEIVEDUporDown == 'U')
                            {
                                <p class="mt-3 mb-0 text-muted text-sm">
                                    <span class="text-success mr-2">
                                        <i class="fa fa-arrow-up"></i>
                                        @Model.VATDashboard.VATRECEIVEDPercentString %
                                    </span>
                                    <span class="text-nowrap">Since last VAT Period</span>
                                </p>
                            }
                            else if (@Model.VATDashboard.VATRECEIVEDUporDown == 'D')
                            {
                                <p class="mt-3 mb-0 text-muted text-sm">
                                    <span class="text-danger mr-2">
                                        <i class="fas fa-arrow-down"></i>
                                        @Model.VATDashboard.VATRECEIVEDPercentString %
                                    </span>
                                    <span class="text-nowrap">Since last VAT Period</span>
                                </p>
                            }
                        </div>
                    </div>
                </div>
                <div class="col-xl-4 col-lg-6">
                    <div class="card card-stats mb-4 mb-xl-0">
                        <div class="card-body">
                            <div class="row">
                                <div class="col">
                                    <h5 class="card-title text-uppercase text-muted mb-0">VAT Paid (Current VAT Period)</h5>
                                    <span class="h2 font-weight-bold mb-0">R @Model.VATDashboard.VATPAIDString </span>
                                </div>
                                <div class="col-auto">
                                    <div class="icon icon-shape bg-yellow text-white rounded-circle shadow">
                                        <i class="ni ni-credit-card"></i>
                                    </div>
                                </div>
                            </div>
                            @if (@Model.VATDashboard.VATPAIDPercent == -999999999)
                            {
                                <p class="mt-3 mb-0 text-muted text-sm">
                                    <span class="text-success mr-2">
                                        <i class="fa fa-arrow-up"></i>
                                    </span>
                                    <span class="text-nowrap">Since last VAT Period</span>
                                </p>
                            }
                            else if (@Model.VATDashboard.VATPAIDUporDown == 'U')
                            {
                                <p class="mt-3 mb-0 text-muted text-sm">
                                    <span class="text-success mr-2">
                                        <i class="fa fa-arrow-up"></i>
                                        @Model.VATDashboard.VATPAIDPercentString %
                                    </span>
                                    <span class="text-nowrap">Since last VAT Period</span>
                                </p>
                            }
                            else if (@Model.VATDashboard.VATPAIDUporDown == 'D')
                            {
                                <p class="mt-3 mb-0 text-muted text-sm">
                                    <span class="text-danger mr-2">
                                        <i class="fas fa-arrow-down"></i>
                                        @Model.VATDashboard.VATPAIDPercentString %
                                    </span>
                                    <span class="text-nowrap">Since last VAT Period</span>
                                </p>
                            }
                        </div>
                    </div>
                </div>
                <div class="col-xl-4 col-lg-6">
                    <div class="card card-stats mb-4 mb-xl-0">
                        <div class="card-body">
                            <div class="row">
                                <div class="col">
                                    <h5 class="card-title text-uppercase text-muted mb-0">VAT Owed est. (Current VAT Period)</h5>
                                    <span class="h2 font-weight-bold mb-0">R @Model.VATDashboard.VATPAIDOutstandingEstString</span>
                                </div>
                                <div class="col-auto">
                                    <div class="icon icon-shape bg-red text-white rounded-circle shadow">
                                        <i class="ni ni-briefcase-24"></i>
                                    </div>
                                </div>
                            </div>
                            @if (@Model.VATDashboard.VATPAIDOutstandingEstPercent == -999999999)
                            {
                                <p class="mt-3 mb-0 text-muted text-sm">
                                    <span class="text-danger mr-2">
                                        <i class="fa fa-arrow-up"></i>
                                    </span>
                                    <span class="text-nowrap">Since last VAT Period</span>
                                </p>
                            }
                            else if (@Model.VATDashboard.VATPAIDOutstandingEstUporDown == 'U')
                            {
                                <p class="mt-3 mb-0 text-muted text-sm">
                                    <span class="text-danger mr-2">
                                        <i class="fa fa-arrow-up"></i>
                                        @Model.VATDashboard.VATPAIDOutstandingEstPercentString %
                                    </span>
                                    <span class="text-nowrap">Since last VAT Period</span>
                                </p>
                            }
                            else if (@Model.VATDashboard.VATPAIDOutstandingEstUporDown == 'D')
                            {
                                <p class="mt-3 mb-0 text-muted text-sm">
                                    <span class="text-success mr-2">
                                        <i class="fas fa-arrow-down"></i>
                                        @Model.VATDashboard.VATPAIDOutstandingEstPercentString %
                                    </span>
                                    <span class="text-nowrap">Since last VAT Period</span>
                                </p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Page content -->
<div class="container-fluid mt--7">
    <!-- Header -->
    <div class="header">
        <div class="container">
            <div class="header-body text-center mb-7">
                <div class="row justify-content-center">
                    <div class="col-lg-5 col-md-6">
                        <h1 class="text-white">
                            VAT
                        </h1>
                        <div>
                            <p class="text-white">
                                For Period @ViewBag.VatPeriod
                            </p>
                        </div>
                    </div>
                </div>
            </div> 
        </div>
    </div>

    <div class="row mt-5">
        @if (Model.VATRecivedList != null && Model.VATRecivedList.Count > 0)
        {
            <div class="col-xl-12 mb-5 mb-xl-0">
                <div class="card shadow">
                    <div class="card-header border-0" data-toggle="collapse" href="#Recived">
                        <div class="row align-items-center">
                            <div class="col">
                                <h3 class="mb-0">VAT Recived On Income</h3>
                            </div>
                            <div class="col text-right">
                                <i class="ni ni-bold-down"></i>
                            </div>
                        </div>
                    </div>
                    <div id="Recived" class="panel-collapse collapse">
                        <div class="table-responsive">
                            <!-- Projects table -->
                            <table class="table align-items-center table-flush">
                                <thead class="thead-light">
                                    <tr>
                                        <th scope="col">Invoice Date</th>
                                        <th scope="col">Job</th>
                                        <th scope="col">Client</th>
                                        <th scope="col">Total Recived (R)</th>
                                        <th scope="col">VAT (R)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.VATRecivedList)
                                    {
                                        <tr>
                                            <td scope="row">
                                                @Html.DisplayFor(modelItem => item.InvoiceDateString)
                                            </td>
                                            <td>
                                                <a href="http://sict-iis.nmmu.ac.za/taxapp/Job/Job?ID=@Html.DisplayFor(modelItem => item.JobID)">@Html.DisplayFor(modelItem => item.JobTitle)</a>
                                            </td>
                                            <td>
                                                <a href='/Client/ClientDetails?ID=@Html.DisplayFor(modelItem => item.clientID)'>
                                                    @Html.DisplayFor(modelItem => item.clientName)
                                                </a>
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TotalString)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.VATorTAXString)
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot class="thead-light">
                                    <tr>
                                        <th>Total: </th>
                                        <th></th>
                                        <th></th>
                                        <th>@ViewBag.totalAmountRecived</th>
                                        <th>@ViewBag.vatTotalAmountRecived</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
                <br />
            </div>
        }
        else
        {
            <div class="col-xl-12 mb-5 mb-xl-0">
                <div class="card shadow">
                    <div class="card-header border-0">
                        <div class="row align-items-center">
                            <div class="col">
                                <h3 class="mb-0">
                                    No Vat Recived this period
                                </h3>
                            </div>
                        </div>
                    </div>
                </div>
                <br />
            </div>
        }
        @if (Model.VATPaid != null && Model.VATPaid.Count > 0)
        {
            <div class="col-xl-12 mb-5 mb-xl-0">
                <div class="card shadow">
                    <div class="card-header border-0" data-toggle="collapse" href="#Paid">
                        <div class="row align-items-center">
                            <div class="col">
                                <h3 class="mb-0">VAT Paid On Expenses</h3>
                            </div>
                            <div class="col text-right">
                                <i class="ni ni-bold-down"></i>
                            </div>
                        </div>
                    </div>
                    <div id="Paid" class="panel-collapse collapse">
                        <div class="table-responsive">
                            <!-- Projects table -->
                            <table class="table align-items-center table-flush">
                                <thead class="thead-light">
                                    <tr>
                                        <th scope="col">Date</th>
                                        <th scope="col">Title</th>
                                        <th scope="col">Total Paid (R)</th>
                                        <th scope="col">VAT (R)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.VATPaid)
                                    {
                                        <tr>
                                            <td scope="row">
                                                @Html.DisplayFor(modelItem => item.date)
                                            </td>
                                            <td>
                                                <a href="@Html.DisplayFor(modelItem => item.URL)">@Html.DisplayFor(modelItem => item.name)</a>
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.TotalString)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.VATString)
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot  class="thead-light">
                                    <tr>
                                        <th>Total: </th>
                                        <th></th>
                                        <th>@ViewBag.totalAmountPaid</th>
                                        <th>@ViewBag.vatTotalAmountPaid</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="col-xl-12 mb-5 mb-xl-0">
                <div class="card shadow">
                    <div class="card-header border-0">
                        <div class="row align-items-center">
                            <div class="col">
                                <h3 class="mb-0">
                                    No Vat Paid this period
                                </h3>
                            </div>
                        </div>
                    </div>
                </div>
                <br />
            </div>
        }

        <div class="col-lg-12 col-md-12">
            <br />
            <div class="card shadow">
                <div class="card-header bg-transparent">
                    <div class="row align-items-center">
                        <div class="col-2">
                            <h3 class="mb-0">Actions: </h3>
                        </div>
                        <div class="col-10 text-right">
                            @using (Html.BeginForm())
                            {
                                @Html.AntiForgeryToken()
                                @Html.DropDownList("VatPeriodList", ViewBag.VATPeriodList as SelectList)
                                <input type="submit" value="Select" class="btn btn-sm btn-default" />
                                <a href="http://sict-iis.nmmu.ac.za/taxapp/Tax/EditTaxVatPeriod?Type=V&Period=@ViewBag.PeriodID"
                                   class="btn btn-sm btn-white">Edit Period</a>
                                <a href="http://sict-iis.nmmu.ac.za/taxapp/Tax/TaxVatPeriod?Type=V"
                                   class="btn btn-sm btn-white">New Period</a>

                                if (Model.period.Share == true)
                                {
                                    <a href="http://sict-iis.nmmu.ac.za/taxapp/Tax/Share?ID=@Model.period.PeriodID&type=V"
                                       class="btn btn-sm btn-white">Stop sharing Period with Consultant</a>
                                }
                                else
                                {
                                    <a href="http://sict-iis.nmmu.ac.za/taxapp/Tax/Share?ID=@Model.period.PeriodID&type=V"
                                       class="btn btn-sm btn-white">Share Period with Consultant</a>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
            <br />
        </div>

    </div>
