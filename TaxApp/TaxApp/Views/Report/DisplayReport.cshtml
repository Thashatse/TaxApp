@model Model.ReportViewModel

@{
    ViewBag.Title = "Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Header -->
<div class="header bg-gradient-primary py-7 py-lg-8">
    <div class="container">
        <div class="header-body text-center mb-7">
            <div class="row justify-content-center">
                <div class="col-lg-6 col-md-7">
                    <h1 class="text-white">
                        @Html.DisplayFor(model => model.reportTitle)
                    </h1>
                    <br />
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        if (ViewBag.DropDownFilter != null)
                        {
                            <div class="text-white">
                                <div class="row">
                                    <div class="col-lg-12 col-sm-12">
                                        @Html.DropDownList("DropDownFilter", ViewBag.DropDownFilter as SelectList)
                                    </div>
                                </div>
                            </div>
                        }
                        
                        <div class="text-white">
                            <div class="row">
                                @if (ViewBag.DropDownFilter == null || ViewBag.AlsoShowDate == true)
                                {
                                <div class="col-lg-4 col-sm-12">
                                    Start: <input name="StartDate" type="date" value="@ViewBag.StartDateRange" />
                                </div>
                                <div class="col-lg-4 col-sm-12">
                                    End: <input name="EndDate" type="date" value="@ViewBag.EndDateRange" />
                                </div>
                                }
                            <div class="col-lg-4 col-sm-12">
                                <br />
                                <input type="submit" value="Update" class="btn btn-sm btn-default" />
                                <a target="_blank" href="/Report/PrintReport?reportID=@ViewBag.reportID&StartDateRange=@ViewBag.StartDateRange&EndDateRange=@ViewBag.EndDateRange&SortBy=Col1&SortDirection=@ViewBag.SortDirection&DropDownID=@ViewBag.DropDownID"
                                   class="btn btn-sm btn-white">Print</a>
                            </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid mt--7">
    <div class="row mt-5">
        <div class="col-xl-12 mb-5 mb-xl-0">
            <div class="card shadow">
                <div class="card-header border-0">
                    <div class="row align-items-center">
                        <div class="col">
                            <h3 class="mb-0">
                                @Html.DisplayFor(model => model.reportCondition)
                            </h3>
                        </div>
                    </div>
                </div>
                <div class="table-responsive">
                    <!-- Projects table -->
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                @if (Model.column1Name != null)
                                {
                                    <th scope="col">
                                        <a href="/Report/DisplayReport?StartDateRange=@ViewBag.StartDateRange&EndDateRange=@ViewBag.EndDateRange&reportID=@ViewBag.reportID&SortBy=Col1&SortDirection=@ViewBag.SortDirection&DropDownID=@ViewBag.DropDownID">@Html.DisplayFor(model => model.column1Name)</a>
                                </th>
                            }
                                @if (Model.column2Name != null)
                                {
                            <th scope="col">
                                <a href="/Report/DisplayReport?StartDateRange=@ViewBag.StartDateRange&EndDateRange=@ViewBag.EndDateRange&reportID=@ViewBag.reportID&SortBy=Col2&SortDirection=@ViewBag.SortDirection&DropDownID=@ViewBag.DropDownID">@Html.DisplayFor(model => model.column2Name)</a>
                                </th>
                                }
                                @if (Model.column3Name != null)
                                {
                            <th scope="col">
                                <a href="/Report/DisplayReport?StartDateRange=@ViewBag.StartDateRange&EndDateRange=@ViewBag.EndDateRange&reportID=@ViewBag.reportID&SortBy=Col3&SortDirection=@ViewBag.SortDirection&DropDownID=@ViewBag.DropDownID">@Html.DisplayFor(model => model.column3Name)</a>
                                </th>
                                }
                                @if (Model.column4Name != null)
                                {
                            <th scope="col">
                                <a href="/Report/DisplayReport?StartDateRange=@ViewBag.StartDateRange&EndDateRange=@ViewBag.EndDateRange&reportID=@ViewBag.reportID&SortBy=Col4&SortDirection=@ViewBag.SortDirection&DropDownID=@ViewBag.DropDownID">@Html.DisplayFor(model => model.column4Name)</a>
                                </th>
                                }
                                @if (Model.column5Name != null)
                                {
                            <th scope="col">
                                <a href="/Report/DisplayReport?StartDateRange=@ViewBag.StartDateRange&EndDateRange=@ViewBag.EndDateRange&reportID=@ViewBag.reportID&SortBy=Col4&SortDirection=@ViewBag.SortDirection&DropDownID=@ViewBag.DropDownID">@Html.DisplayFor(model => model.column5Name)</a>
                                </th>
                                }
                                @if (Model.column6Name != null)
                                {
                            <th scope="col">
                                <a href="/Report/DisplayReport?StartDateRange=@ViewBag.StartDateRange&EndDateRange=@ViewBag.EndDateRange&reportID=@ViewBag.reportID&SortBy=Col6&SortDirection=@ViewBag.SortDirection&DropDownID=@ViewBag.DropDownID">@Html.DisplayFor(model => model.column6Name)</a>
                                </th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @{int i = 0;}
                            @foreach (var item in Model.ReportDataList)
                            {
                                <tr>
                                    @if (Model.column1Name != null)
                                    {
                                        <td>@Html.DisplayFor(model => model.ReportDataList[i].column1Data)</td>
                                    }
                                    @if (Model.column2Name != null)
                                    {
                                        <td>@Html.DisplayFor(model => model.ReportDataList[i].column2Data)</td>
                                    }
                                    @if (Model.column3Name != null)
                                    {
                                        <td>@Html.DisplayFor(model => model.ReportDataList[i].column3Data)</td>
                                    }
                                    @if (Model.column4Name != null)
                                    {
                                        <td>@Html.DisplayFor(model => model.ReportDataList[i].column4Data)</td>
                                    }
                                    @if (Model.column5Name != null)
                                    {
                                        <td>@Html.DisplayFor(model => model.ReportDataList[i].column5Data)</td>
                                    }
                                    @if (Model.column6Name != null)
                                    {
                                        <td>@Html.DisplayFor(model => model.ReportDataList[i].column6Data)</td>
                                    }
                                </tr>
                                { i = i + 1; }
                            }
                        </tbody>
                        <tfoot class="thead-light">
                            <tr>
                                @if (Model.column1Name != null)
                                {
                                    <th>Total:</th>
                                }
                                @if (Model.column2Name != null)
                                {
                                    <th>@Html.DisplayFor(model => model.column2Total)</th>
                                }
                                @if (Model.column3Name != null)
                                {
                                    <th>@Html.DisplayFor(model => model.column3Total)</th>
                                }
                                @if (Model.column4Name != null)
                                {
                                    <th>@Html.DisplayFor(model => model.column4Total)</th>
                                }
                                @if (Model.column5Name != null)
                                {
                                    <th>@Html.DisplayFor(model => model.column5Total)</th>
                                }
                                @if (Model.column6Name != null)
                                {
                                    <th>@Html.DisplayFor(model => model.column6Total)</th>
                                }
                            </tr>
                            @{i = 0;}
                            @if (Model.FooterRowList != null)
                            {
                                foreach (var item in Model.FooterRowList)
                                {
                                    <tr>
                                        @if (Model.column1Name != null)
                                        {
                                            <th>@Html.DisplayFor(model => model.FooterRowList[i].column1Data)</th>
                                        }
                                        @if (Model.column2Name != null)
                                        {
                                            <th>@Html.DisplayFor(model => model.FooterRowList[i].column2Data)</th>
                                        }
                                        @if (Model.column3Name != null)
                                        {
                                            <th>@Html.DisplayFor(model => model.FooterRowList[i].column3Data)</th>
                                        }
                                        @if (Model.column4Name != null)
                                        {
                                            <th>@Html.DisplayFor(model => model.FooterRowList[i].column4Data)</th>
                                        }
                                        @if (Model.column5Name != null)
                                        {
                                            <th>@Html.DisplayFor(model => model.FooterRowList[i].column5Data)</th>
                                        }
                                        @if (Model.column6Name != null)
                                        {
                                            <th>@Html.DisplayFor(model => model.ReportDataList[i].column6Data)</th>
                                        }
                                    </tr>
                                    { i = i + 1; }
                                }
                            }
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
