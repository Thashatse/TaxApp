@model Model.ReportViewModel

@{
    ViewBag.Title = "PrintReport";
    Layout = "";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        @ViewBag.Title
    </title>
    @Scripts.Render("~/bundles/modernizr")

    <meta name="viewport" content="width=device-width" />
    <title></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Favicon -->
    <link href="../Theam/img/brand/favicon.png" rel="icon" type="image/png">
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">
    <!-- Icons -->
    <link href="../Theam/vendor/nucleo/css/nucleo.css" rel="stylesheet">
    <link href="../Theam/vendor/fortawesome/fontawesome-free/css/all.min.css" rel="stylesheet">
    <!-- Argon CSS -->
    <link type="text/css" href="../Theam/css/argon.css?v=1.0.0" rel="stylesheet">
</head>

<body onload="window.print()">
    <div class="row justify-content-center">
        <div class="col-lg-12 col-md-12">
            <div class="card bg-secondary shadow border-0">
                <div class="container">
                    <div class="card-header border-0">
                        <div class="row align-items-center">
                            <div class="col">
                                <h1>
                                    @Html.DisplayFor(model => model.reportTitle)
                                </h1>
                                <br />
                                <h3 class="mb-0">
                                    @Html.DisplayFor(model => model.reportCondition)
                                </h3>
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <!-- Projects table -->
                        <table class="table align-items-center table-flush">
                            <thead class="thead-light">
                                <tr>
                                    @if (Model.column1Name != null)
                                    {
                                        <th scope="col">@Html.DisplayFor(model => model.column1Name)</th>
                                    }
                                    @if (Model.column2Name != null)
                                    {
                                        <th scope="col">@Html.DisplayFor(model => model.column2Name)</th>
                                    }
                                    @if (Model.column3Name != null)
                                    {
                                        <th scope="col">@Html.DisplayFor(model => model.column3Name)</th>
                                    }
                                    @if (Model.column4Name != null)
                                    {
                                        <th scope="col">@Html.DisplayFor(model => model.column4Name)</th>
                                    }
                                    @if (Model.column5Name != null)
                                    {
                                        <th scope="col">@Html.DisplayFor(model => model.column5Name)</th>
                                    }
                                    @if (Model.column6Name != null)
                                    {
                                        <th scope="col">@Html.DisplayFor(model => model.column6Name)</th>
                                    }
                                </tr>
                            </thead>
                            <tbody>
                                @{int i = 0;}
                                @foreach (var item in Model.column1Data)
                                {
                                    <tr>
                                        @if (Model.column1Name != null)
                                        {
                                            <td>@Html.DisplayFor(model => model.column1Data[i])</td>
                                        }
                                        @if (Model.column2Name != null)
                                        {
                                            <td>@Html.DisplayFor(model => model.column2Data[i])</td>
                                        }
                                        @if (Model.column3Name != null)
                                        {
                                            <td>@Html.DisplayFor(model => model.column3Data[i])</td>
                                        }
                                        @if (Model.column4Name != null)
                                        {
                                            <td>@Html.DisplayFor(model => model.column4Data[i])</td>
                                        }
                                        @if (Model.column5Name != null)
                                        {
                                            <td>@Html.DisplayFor(model => model.column5Data[i])</td>
                                        }
                                        @if (Model.column6Name != null)
                                        {
                                            <td>@Html.DisplayFor(model => model.column6Data[i])</td>
                                        }
                                    </tr>
                                    { i = i + 1; }
                                }
                            </tbody>
                            <tfoot class="thead-light">
                                <tr>
                                    @if (Model.column1Name != null)
                                    {
                                        <th>Total:</th>
                                    }
                                    @if (Model.column2Name != null)
                                    {
                                        <th>@Html.DisplayFor(model => model.column2Total)</th>
                                    }
                                    @if (Model.column3Name != null)
                                    {
                                        <th>@Html.DisplayFor(model => model.column3Total)</th>
                                    }
                                    @if (Model.column4Name != null)
                                    {
                                        <th>@Html.DisplayFor(model => model.column4Total)</th>
                                    }
                                    @if (Model.column5Name != null)
                                    {
                                        <th>@Html.DisplayFor(model => model.column5Total)</th>
                                    }
                                    @if (Model.column6Name != null)
                                    {
                                        <th>@Html.DisplayFor(model => model.column6Total)</th>
                                    }
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
                <br />
            </div>
        </div>
    </div>
</body>

<!-- Argon Scripts -->
<!-- Core -->
<script src="../Theam/vendor/jquery/dist/jquery.min.js"></script>
<script src="../Theam/vendor/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<!-- Optional JS -->
<script src="../Theam/vendor/chart.js/dist/Chart.min.js"></script>
<script src="../Theam/vendor/chart.js/dist/Chart.extension.js"></script>
<!-- Argon JS -->
<script src="../Theam/js/argon.js?v=1.0.0"></script>
