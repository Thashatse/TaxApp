                <div class="card-body">
                    <div class="row icon-examples">
                        <div class="col-lg-3 col-md-6">
                            <button type="button" class="btn-icon-clipboard"  onclick="window.location.href = '../Report/DisplayReport?reportID=0001';">
                                <div>
                                    <i class="ni ni-align-left-2"></i>
                                    <span>Jobs Report</span>
                                </div>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            <br />
        </div>
    </div>

    <div class="row">
        <div class="col">
            <div class="card shadow">
                <div class="card-header bg-transparent">
                    <h3 class="mb-0">Client</h3>
