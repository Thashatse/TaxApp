                                        <i class="fa fa-arrow-up"></i>
                                        UP @Model.DashboardIncomeExpense.ExpensePast60to30DaysPercent %
                                    </span>
                                    <span class="text-nowrap">Since last month</span>
                                </p>
                            }
                            else if (@Model.DashboardIncomeExpense.ExpensePast60to30DaysUporDown == 'D')
