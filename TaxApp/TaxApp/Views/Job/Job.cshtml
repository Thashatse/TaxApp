@model Model.SP_GetJob_Result

@{
    ViewBag.Title = "Job";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Header -->
<div class="header bg-gradient-primary py-7 py-lg-8">
    <div class="container">
        <div class="header-body text-center mb-7">
            <div class="row justify-content-center">
                <div class="col-lg-5 col-md-6">
                    <h1 class="text-white">
                        @Html.DisplayFor(model => model.JobTitle)
                    </h1>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Page content -->
<div class="container mt--8 pb-5">
    <div class="row justify-content-center">
        <div class="col-lg-12 col-md-12">
            <div class="card bg-secondary shadow border-0">

                <div>
                    <!-- Projects table -->
                    <table class="table align-items-center table-flush">
                        <tbody>
                            <tr>
                                <th scope="row">
                                    @Html.DisplayNameFor(model => model.HourlyRate)

                                </th>
                                <td>
                                    R @Html.DisplayFor(model => model.HourlyRate)
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    @Html.DisplayNameFor(model => model.Budget)

                                </th>
                                <td>
                                    R @Html.DisplayFor(model => model.Budget)
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    @Html.DisplayNameFor(model => model.StartDate)

                                </th>
                                <td>
                                    @Html.DisplayFor(model => model.StartDateString)
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    @Html.DisplayNameFor(model => model.EndDate)
                                </th>
                                <td>
                                    @Html.DisplayFor(model => model.EndDateString)
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    @Html.DisplayNameFor(model => model.ClientFirstName)
                                </th>
                                <td>
                                    <a href='/Client/ClientDetails?ID=@Html.DisplayFor(model => model.ClientID)'>
                                        @Html.DisplayFor(model => model.ClientFirstName)
                                    </a>
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    @Html.DisplayNameFor(model => model.WorkLogHours)
                                </th>
                                <td>
                                    <a href='/Job/JobWorkLog?ID=@Html.DisplayFor(model => model.JobID)'>
                                        @Html.DisplayFor(model => model.WorkLogHoursString)
                                    </a>
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    @Html.DisplayNameFor(model => model.ExpenseTotal)
                                </th>
                                <td>
                                    <a href='/Expense/JobExpenses?ID=@Html.DisplayFor(model => model.JobID)'>
                                        R  @Html.DisplayFor(model => model.ExpenseTotal)
                                    </a>
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    @Html.DisplayNameFor(model => model.TravelLogCostTotal)
                                </th>
                                <td>
                                    <a href='/Expense/JobTravleLog?ID=@Html.DisplayFor(model => model.JobID)'>
                                        R @Html.DisplayFor(model => model.TravelLogCostTotal)
                                    </a>
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    @Html.DisplayNameFor(model => model.TotalUnPaid)
                                </th>
                                <td>
                                    <a href='/Invoice/JobInvoices?ID=@Html.DisplayFor(model => model.JobID)'>
                                        R @Html.DisplayFor(model => model.TotalUnPaid)
                                    </a>
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    @Html.DisplayNameFor(model => model.TotalPaid)
                                </th>
                                <td>
                                    <a href='/Invoice/JobInvoices?ID=@Html.DisplayFor(model => model.JobID)'>
                                        R @Html.DisplayFor(model => model.TotalPaid)
                                    </a>
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    <p>
                                        @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
                                        @Html.ActionLink("Back to List", "Index")
                                    </p>
                                </th>
                                <td></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>