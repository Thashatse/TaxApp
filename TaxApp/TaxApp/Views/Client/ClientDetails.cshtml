@model Model.Client

@{
    ViewBag.Title = "Client Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Header -->
<div class="header bg-gradient-primary py-7 py-lg-8">
    <div class="container">
        <div class="header-body text-center mb-7">
            <div class="row justify-content-center">
                <div class="col-lg-5 col-md-6">
                    <h1 class="text-white">
                        @Html.DisplayFor(model => model.FirstName)
                        @Html.DisplayFor(model => model.LastName)
                    </h1>
                    <br />
                    <div>
                        <a class="btn btn-sm btn-white" href='/Client/Edit?ID=@Html.DisplayFor(model => model.ClientID)'>
                            Edit
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid mt--7">
    <!-- Page content -->
    <div class="container mt--8 pb-5">
        <div class="row justify-content-center">
            <div class="col-lg-12 col-md-12">
                <div class="card bg-secondary shadow border-0">
                        <table class="table align-items-center table-flush">
                            <tbody>
                                <tr>
                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.CompanyName)
                                    </th>
                                    <td>
                                        @Html.DisplayFor(model => model.CompanyName)
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.ContactNumber)
                                    </th>
                                    <td>
                                        <a href="tel:@Html.DisplayFor(model => model.ContactNumber)">
                                            @Html.DisplayFor(model => model.ContactNumber)
                                        </a>
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.EmailAddress)
                                    </th>
                                    <td>
                                        <a target="_blank" href="mailto:@Html.DisplayFor(model => model.EmailAddress)" target="_blank">
                                            @Html.DisplayFor(model => model.EmailAddress)
                                        </a>
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">
                                        @Html.DisplayNameFor(model => model.PhysiclaAddress)
                                    </th>
                                    <td>
                                        <a target="_blank" href="https://www.google.com/maps/search/?api=1&@Html.DisplayFor(model => model.PhysiclaAddress)">
                                            @Html.DisplayFor(model => model.PhysiclaAddress)
                                        </a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                </div>
            </div>
        </div>
    </div>
