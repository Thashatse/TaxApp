@model Model.Profile

@{
    Layout = "";
    ViewBag.Title = "Change Password";
}


<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title - Tax App</title>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Favicon -->
    <link href="/Theam/img/brand/favicon.png" rel="icon" type="image/png">
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">
    <!-- Icons -->
    <link href="/Theam/vendor/nucleo/css/nucleo.css" rel="stylesheet">
    <link href="/Theam/vendor/fortawesome/fontawesome-free/css/all.min.css" rel="stylesheet">
    <!-- Argon CSS -->
    <link type="text/css" href="/Theam/css/argon.css?v=1.0.0" rel="stylesheet">
</head>

<body class="bg-default">
    <div class="main-content">
        <!-- Header -->
        <div class="header bg-gradient-primary py-7 py-lg-8">
            <div class="container">
                <div class="header-body text-center mb-7">
                    <div class="row justify-content-center">
                        <div class="col-lg-5 col-md-6">
                            <h1 class="text-white">Tax App</h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @using (Html.BeginForm())
        {
            <!-- Page content -->
            <div class="container mt--8 pb-5">
                <div class="row justify-content-center">
                    <div class="col-lg-5 col-md-7">
                        <div class="card bg-secondary shadow border-0">
                            <div class="card-body px-lg-5 py-lg-5">
                                <div class="text-center text-muted mb-4">
                                    @if (ViewBag.Email)
                                    {
                                        <h4 class="text-lead text-dark">Enter your Tax App email or username.</h4>
                                    }
                                    else if (ViewBag.OTP)
                                    {
                                        <h4 class="text-lead text-dark">Enter the OTP that has been sent to you.</h4>
                                    }
                                    else if (ViewBag.Pass)
                                    {
                                        <h4 class="text-lead text-dark">Enter your new password.</h4>
                                    }
                                    else if (ViewBag.success)
                                    {
                                        <h4 class="text-lead text-dark">Your password has successfully been changed.</h4>
                                    }
                                    <p style="color:red;">@ViewBag.Message</p>
                                </div>
                                <form role="form">
                                    @if (ViewBag.Email)
                                    {
                                        <div class="form-group mb-3">
                                            <div class="form-group">
                                                <div class="col-12">
                                                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="text-center">
                                            <div class="form-group">
                                                <input type="submit" value="Continue" class="btn btn-primary my-4" /> |
                                                <a href='/Landing/Welcome'>
                                                    Cancel
                                                </a>
                                            </div>
                                        </div>
                                    }
                                    else if (ViewBag.OTP)
                                    {
                                        <div class="form-group mb-3">
                                            <div class="form-group">
                                                <div class="col-12">
                                                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="text-center">
                                            <div class="form-group">
                                                <input type="submit" value="Continue" class="btn btn-primary my-4" /> |
                                                <a href='/Landing/Welcome'>
                                                    Cancel
                                                </a>
                                            </div>
                                        </div>
                                        @Html.HiddenFor(model => model.Username)
                                    }
                                    else if (ViewBag.Pass)
                                    {
                                        <div class="form-group mb-3">
                                            <div class="col-lg-12">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.NewPassword, htmlAttributes: new { @class = "control-label col-md-12" })
                                                    <div class="col-md-12">
                                                        @Html.PasswordFor(model => model.NewPassword, new { htmlAttributes = new { @class = "form-control" } })
                                                        @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-12">
                                                <div class="form-group">
                                                    @Html.LabelFor(model => model.NewPasswordConfirmation, htmlAttributes: new { @class = "control-label col-md-12" })
                                                    <div class="col-md-12">
                                                        @Html.PasswordFor(model => model.NewPasswordConfirmation, new { htmlAttributes = new { @class = "form-control" } })
                                                        @Html.ValidationMessageFor(model => model.NewPasswordConfirmation, "", new { @class = "text-danger" })
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="text-center">
                                            <div class="form-group">
                                                <input type="submit" value="Update Password" class="btn btn-primary my-4" /> |
                                                <a href='/Landing/Welcome'>
                                                    Cancel
                                                </a>
                                            </div>
                                        </div>
                                        @Html.HiddenFor(model => model.Username)
                                        @Html.HiddenFor(model => model.Password)
                                    }
                                    else if (ViewBag.success)
                                    {
                                        <a class="btn btn-primary" href='/Landing/Welcome'>
                                            Sign in
                                        </a>
                                    }
                                    @Html.HiddenFor(model => model.PassRestCode)
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</body>
</html>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}