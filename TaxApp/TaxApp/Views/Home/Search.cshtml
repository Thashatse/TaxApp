@model IEnumerable<Model.SearchViewModel>

@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="header bg-gradient-primary py-7 py-lg-8">
    <div class="header-body text-center mb-7">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-6">
                <h1 class="text-white">
                    Search Results
                </h1>
                <br />
                <p class="text-white">
                    Date Range: @ViewBag.DateRange
                    @if (ViewBag.View != "DS")
                    {
                        <a href="/Home/Search?view=DS&StartDateRange=@ViewBag.StartDateRange&EndDateRange=@ViewBag.EndDateRange&term=@ViewBag.term&cat=@ViewBag.cat"
                           class="btn btn-sm btn-white"><i class="ni ni-settings-gear-65"></i></a>
                    }
                </p>
                @if (ViewBag.View == "DS")
                {
                    using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="text-white">
                            <div class="row">
                                <div class="col-lg-5 col-sm-12">Start: <input name="StartDate" type="date" value="@ViewBag.StartDateRange" /></div>
                                <div class="col-lg-5 col-sm-12">
                                    End: <input name="EndDate" type="date" value="@ViewBag.EndDateRange" />
                                </div>
                                <div class="col-lg-2 col-sm-12">
                                    <br /><input type="submit" value="Select" class="btn btn-sm btn-default" />
                                </div>
                            </div>
                        </div>

                    }
                }
            </div>
        </div>
    </div>
</div>

<div class="container-fluid mt--7">
    <div class="row mt-5">
        <div class="col-xl-12 mb-5 mb-xl-0">
            <div class="card shadow">
                <div class="card-header border-0">
                    <div class="row align-items-center">
                        <div class="col">
                            <h3 class="mb-0">
                                @ViewBag.SearchType Results for search term: '@ViewBag.term'  &nbsp;
                                @if (ViewBag.SearchType != null && ViewBag.SearchType != "")
                                {
                                    <a class="btn btn-sm btn-white" href="Search?view=@ViewBag.view&StartDateRange=@ViewBag.StartDateRange&EndDateRange=@ViewBag.EndDateRange&term=@ViewBag.term&cat=A">
                                        View All Results
                                    </a>
                                }
                            </h3>
                        </div>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <a href="@Html.DisplayFor(modelItem => item.ResultLink)">
                                        @Html.DisplayFor(modelItem => item.ResultTitle)
                                    </a><br />
                                    @Html.DisplayFor(modelItem => item.ResultDetails)
                                    -
                                    @Html.DisplayFor(modelItem => item.ResultDateString)
                                </td>
                            </tr>
                        }
                        @if (Model.Count() == 0)
                        {
                            <tr>
                                <td>
                                    No Results
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
