@model IEnumerable<Model.TravelLog>

@{
    ViewBag.Title = "TravleLog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Header -->
<div class="header bg-gradient-primary py-7 py-lg-8">
    <div class="container">
        <div class="header-body text-center mb-7">
            <div class="row justify-content-center">
                <div class="col-lg-5 col-md-6">
                    <h1 class="text-white">
                        Travle Log
                    </h1>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mt--8 pb-5">
    <div class="row justify-content-center">
        <div class="col-lg-12 col-md-12">
            <div class="card bg-secondary shadow border-0">

                <br />
                <div class="col text-right">
                    @if (ViewBag.Complete == "NotDone")
                    {
                        <a href="Expense/NewTravelExpense.cshtml"
                           class="btn btn-sm btn-primary">New Log Item</a>
                    }
                    </div>
                <br />

                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Date)
                        </th>
                        <th>
                            Toral Business KMs
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Reason)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <a href='./TravleLogItem?ID=@Html.DisplayFor(modelItem => item.ExpenseID)'>
                                    @Html.DisplayFor(modelItem => item.DateString)
                                </a>
                            </td>
                            <td>
                                <a href='./TravleLogItem?ID=@Html.DisplayFor(modelItem => item.ExpenseID)'>
                                    @Html.DisplayFor(modelItem => item.TotalKMs) KMs
                                    </a>
                            </td>
                            <td>
                                <a href='./TravleLogItem?ID=@Html.DisplayFor(modelItem => item.ExpenseID)'>
                                    @Html.DisplayFor(modelItem => item.Reason)
                                    </a>
                            </td>
                            <td>
                                @if (item.Invoiced.Equals(false))
                                {
                                    <a href='./EditTravleLogItem?ID=@Html.DisplayFor(modelItem => item.ExpenseID)'> Edit | </a>
                                    <a href='./DeleteTravleLogItem?ID=@Html.DisplayFor(modelItem => item.ExpenseID)'>Delete</a>
                                }
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>