@model IEnumerable<Model.SP_GetJobExpense_Result>

@{
    ViewBag.Title = "Job Expenses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="header bg-gradient-primary py-7 py-lg-8">
    <div class="container">
        <div class="header-body text-center mb-7">
            <div class="row justify-content-center">
                <div class="col-lg-5 col-md-6">
                    <h1 class="text-white">Job Expenses</h1>
                    <p class="text-white">For <a class="text-white" href="../Job/Job?ID=@ViewBag.JobID"> @ViewBag.JobTitle</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid mt--7">
    <div class="row mt-5">
        <div class="col-xl-4">

            @if (ViewBag.Complete == "NotDone")
            {
                <div class="card shadow">
                    <div class="card-header border-0">
                        <div class="row align-items-center">
                            <div class="col-9">
                                <h3 class="mb-0">New</h3>
                                    <p>Create a new job expense</p>
                            </div>
                            <div class="col-3 text-right">
                                <a href="/Expense/NewJobExpense?ID=@ViewBag.JobID" class="btn btn-primary">
                                    <i class="ni ni-fat-add"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <br />
            }
        </div>
        @foreach (var item in Model)
        {
    <div class="col-xl-4">
        <div class="card shadow">
            <div class="card-header border-0">
                <div class="row align-items-center">
                    <div class="col">
                        <h3 class="mb-0">@Html.DisplayFor(modelItem => item.Name)</h3>
                        <p>
                            @Html.DisplayFor(modelItem => item.DateString)
                        </p>
                    </div>
                    <div class="col text-right">
                        <button data-toggle="collapse" href="#@Html.DisplayFor(modelItem => item.dropDownID)" class="btn btn-sm btn-white">Details</button>
                    </div>
                </div>
            </div>
            <div id="@Html.DisplayFor(modelItem => item.dropDownID)" class="panel-collapse collapse">
                <div class="table-responsive">
                    <!-- Projects table -->
                    <table class="table align-items-center table-flush">
                        <tbody>
                            <tr>
                                <th scope="row">
                                    Job
                                </th>
                                <td>
                                    <a href="../Job/Job?ID=@Html.DisplayFor(modelItem => item.JobID)">
                                        @Html.DisplayFor(modelItem => item.JobTitle)
                                    </a>
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    Description
                                </th>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    Amount
                                </th>
                                <td>
                                    R @Html.DisplayFor(modelItem => item.AmountString)
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    Category
                                </th>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CatName)
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">
                                    Category Description
                                </th>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CatDescription)
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="card-header border-0">
                    <div class="row align-items-center">
                        <div class="col-3">
                            <p class="mb-0">Actions: </p>
                        </div>
                        <div class="col-9 text-right">
                            @if (ViewBag.Complete == "NotDone")
                            {
                                <a href="../Expense/EditJobExpense?ID=@Html.DisplayFor(model => item.ExpenseID)"
                                   class="btn btn-sm btn-white">Edit</a>
                            }
                            <br />
                            <br />
                            @if (item.Invoice_ReceiptCopy == null)
                            {
                                <a href="../Functions/AttachFile?ID=@Html.DisplayFor(model => item.ExpenseID)&type=JE&Title=Invoice or Receipt&Details=@Html.DisplayFor(model => item.Name)"
                                   class="btn btn-sm btn-white">
                                    Add Invoice or Receipt Copy<i class="ni ni-cloud-upload-96"></i>
                                </a>
                            }
                            else
                            {
                                <a target="_blank" href="../Functions/DownloadFile?ID=@Html.DisplayFor(model => item.ExpenseID)&type=JE"
                                   class="btn btn-sm btn-white">
                                    Download Invoice or Receipt Copy <i class="ni ni-cloud-download-95"></i>
                                </a>
                                <a href="../Functions/AttachFile?ID=@Html.DisplayFor(model => item.ExpenseID)&type=JE&Title=Invoice or Receipt&Details=@Html.DisplayFor(model => item.Name)"
                                   class="btn btn-sm btn-white">
                                    Update Invoice or Receipt Copy<i class="ni ni-cloud-upload-96"></i>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br />
    </div>
        }
    </div>
    @if (ViewBag.files == "True")
    {
        <a href="/Expense/JobExpenses?downloadAll=True&ID=@ViewBag.JobID"
           class="btn btn-sm btn-white">Download All Invoice and Receipts<i class="ni ni-cloud-download-95"></i></a>
    }