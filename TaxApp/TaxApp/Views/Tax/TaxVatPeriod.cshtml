@model Model.TaxAndVatPeriods

@{
    ViewBag.Title = ViewBag.Type +"Period";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Header -->
<div class="header bg-gradient-primary py-7 py-lg-8">
    <div class="container">
        <div class="header-body text-center mb-7">
            <div class="row justify-content-center">
                <div class="col-lg-5 col-md-6">
                    <h1 class="text-white">@ViewBag.Type Period</h1>
                    @if (ViewBag.Type == "New Tax")
                    {
                        <p class="text-white">Tax Periods refer to the tax year. These dates are necessary to provide accurate reporting and estimates on the tax year. They are required to use the Tax Centre and Reports. </p>
                    }
                    else
                    {
                <p class="text-white">VAT Period refers to the TAX Periods for vendors. These dates are necessary to provide accurate reporting and estimates on the VAT Period. They are required to use the VAT Centre and Reports. </p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid mt--7">
    <!-- Page content -->
    <div class="container mt--8 pb-5">
        <div class="row justify-content-center">
            <div class="col-lg-12 col-md-12">
                <div class="card bg-secondary shadow border-0">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">

                            <div class="form-group">
                                @Html.LabelFor(model => model.StartDate, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <input class="datefield" data-val="true" data-val-required="Date is required"
                                           id="ReleaseDate" name="StartDate" type="date" value="DateTime.Now" />
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.EndDate, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    <input class="datefield" data-val="true" data-val-required="Date is required"
                                           id="ReleaseDate" name="EndDate" type="date" value="DateTime.Now" />
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Create" class="btn btn-default" /> |
                                    <a href="/Home/Index">Cancel</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
