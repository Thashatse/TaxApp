@model Model.TaxCenter
@{
    ViewBag.Title = "Tax Center";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="header bg-gradient-primary pb-8 pt-5 pt-md-8">
    <div class="container-fluid">
        <div class="header-body">
            <!-- Card stats -->
            <div class="row">
                <div class="col-xl-4 col-lg-6">
                    <div class="card card-stats mb-4 mb-xl-0">
                        <div class="card-body">
                            <div class="row">
                                <div class="col">
                                    <h5 class="card-title text-uppercase text-muted mb-0">Income Received (Current TAX Period)</h5>
                                    <span class="h2 font-weight-bold mb-0">R @Model.TAXDashboard.IncomeSTRING</span>
                                </div>
                                <div class="col-auto">
                                    <div class="icon icon-shape bg-green text-white rounded-circle shadow">
                                        <i class="ni ni-money-coins"></i>
                                    </div>
                                </div>
                            </div>
                            @if (@Model.TAXDashboard.IncomePercent == -999999999)
                            {
                                <p class="mt-3 mb-0 text-muted text-sm">
                                    <span class="text-success mr-2">
                                        <i class="fa fa-arrow-up"></i>
                                        UP
                                    </span>
                                    <span class="text-nowrap">Since last month</span>
                                </p>
                            }
                            else if (@Model.TAXDashboard.IncomeUporDown == 'U')
                            {
                                <p class="mt-3 mb-0 text-muted text-sm">
                                    <span class="text-success mr-2">
                                        <i class="fa fa-arrow-up"></i>
                                        UP @Model.TAXDashboard.IncomePercentString %
                                    </span>
                                    <span class="text-nowrap">Since last month</span>
                                </p>
                            }
                            else if (@Model.TAXDashboard.IncomeUporDown == 'D')
                            {
                                <p class="mt-3 mb-0 text-muted text-sm">
                                    <span class="text-danger mr-2">
                                        <i class="fas fa-arrow-down"></i>
                                        DOWN @Model.TAXDashboard.IncomePercentString %
                                    </span>
                                    <span class="text-nowrap">Since last month</span>
                                </p>
                            }
                        </div>
                    </div>
                </div>
                <div class="col-xl-4 col-lg-6">
                    <div class="card card-stats mb-4 mb-xl-0">
                        <div class="card-body">
                            <div class="row">
                                <div class="col">
                                    <h5 class="card-title text-uppercase text-muted mb-0">Tax Braket est. (Current TAX Period)</h5>
                                    <span class="h2 font-weight-bold mb-0">@Model.TAXDashboard.TaxBraketString</span>
                                </div>
                                <div class="col-auto">
                                    <div class="icon icon-shape bg-yellow text-white rounded-circle shadow">
                                        <i class="ni ni-align-left-2"></i>
                                    </div>
                                </div>
                            </div>
                            <p class="mt-3 mb-0 text-muted text-sm">
                                <br />
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-xl-4 col-lg-6">
                    <div class="card card-stats mb-4 mb-xl-0">
                        <div class="card-body">
                            <div class="row">
                                <div class="col">
                                    <h5 class="card-title text-uppercase text-muted mb-0">TAX Owed est. (Current TAX Period)</h5>
                                    <span class="h2 font-weight-bold mb-0">R @Model.TAXDashboard.TAXOwedSTRING</span>
                                </div>
                                <div class="col-auto">
                                    <div class="icon icon-shape bg-red text-white rounded-circle shadow">
                                        <i class="ni ni-briefcase-24"></i>
                                    </div>
                                </div>
                            </div>
                            @if (@Model.TAXDashboard.TAXOwedPercent == -999999999)
                            {
                                <p class="mt-3 mb-0 text-muted text-sm">
                                    <span class="text-success mr-2">
                                        <i class="fa fa-arrow-up"></i>
                                        UP
                                    </span>
                                    <span class="text-nowrap">Since last month</span>
                                </p>
                            }
                            else if (@Model.TAXDashboard.TAXOwedUporDown == 'U')
                            {
                                <p class="mt-3 mb-0 text-muted text-sm">
                                    <span class="text-success mr-2">
                                        <i class="fa fa-arrow-up"></i>
                                        UP @Model.TAXDashboard.TAXOwedPercentString %
                                    </span>
                                    <span class="text-nowrap">Since last month</span>
                                </p>
                            }
                            else if (@Model.TAXDashboard.TAXOwedUporDown == 'D')
                            {
                                <p class="mt-3 mb-0 text-muted text-sm">
                                    <span class="text-danger mr-2">
                                        <i class="fas fa-arrow-down"></i>
                                        DOWN @Model.TAXDashboard.TAXOwedPercentString %
                                    </span>
                                    <span class="text-nowrap">Since last month</span>
                                </p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Page content -->
<div class="container-fluid mt--7">
    <!-- Header -->
    <div class="header">
        <div class="container">
            <div class="header-body text-center mb-7">
                <div class="row justify-content-center">
                    <div class="col-lg-5 col-md-6">
                        <h1 class="text-white">
                            TAX
                        </h1>

                        <p class="text-white">
                            For Period @ViewBag.TaxPeriod
                        </p>
                        <div>
                            <a href="#"
                               class="btn btn-sm btn-white">Send Report to Consultant</a>
                            <a href="../TAX/TaxCenter?view=DS"
                               class="btn btn-sm btn-white"><i class="ni ni-settings-gear-65"></i></a>
                        </div>
                        <div>
                            @if (ViewBag.View == "DS")
                            {
                                using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.DropDownList("TaxPeriodList", ViewBag.VATPeriodList as SelectList)
                                    <input type="submit" value="Select" class="btn btn-sm btn-default" />
                                    <a href="../Tax/TaxVatPeriod?Type=T"
                                       class="btn btn-sm btn-white">New Period</a>
                                }
                            }
                        </div>
                        </div>
                    </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        @if (Model.TAXRecivedList != null && Model.TAXRecivedList.Count > 0)
        {
            <div class="col-xl-12 mb-5 mb-xl-0">
                <div class="card shadow">
                    <div class="card-header border-0">
                        <div class="row align-items-center">
                            <div class="col">
                                <h3 class="mb-0">Income Recived</h3>
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <!-- Projects table -->
                        <table class="table align-items-center table-flush">
                            <thead class="thead-light">
                                <tr>
                                    <th scope="col">Invoice Date</th>
                                    <th scope="col">Job</th>
                                    <th scope="col">Client</th>
                                    <th scope="col">Total Recived</th>
                                    <th scope="col">TAX Est.</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.TAXRecivedList)
                                {
                                    <tr>
                                        <th scope="row">
                                            @Html.DisplayFor(modelItem => item.InvoiceDateString)
                                        </th>
                                        <td>
                                            <a href="/Job/Job?ID=@Html.DisplayFor(modelItem => item.JobID)">@Html.DisplayFor(modelItem => item.JobTitle)</a>
                                        </td>
                                        <td>
                                            <a href='/Client/ClientDetails?ID=@Html.DisplayFor(modelItem => item.clientID)'>
                                                @Html.DisplayFor(modelItem => item.clientName)
                                            </a>
                                        </td>
                                        <td>
                                            R @Html.DisplayFor(modelItem => item.TotalString)
                                        </td>
                                        <td>
                                            R @Html.DisplayFor(modelItem => item.VATorTAXString)
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <br />
            </div>
        }
        else
        {
            <p>No Vat Recived this period </p>
        }
    </div>
