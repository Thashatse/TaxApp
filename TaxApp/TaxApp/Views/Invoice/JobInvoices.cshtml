@model IEnumerable<Model.SP_GetInvoice_Result>

@{
    ViewBag.Title = "Job Invoices";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Header -->
<div class="header bg-gradient-primary py-7 py-lg-8">
    <div class="container">
        <div class="header-body text-center mb-7">
            <div class="row justify-content-center">
                <div class="col-lg-5 col-md-6">
                    <h1 class="text-white">
                        All Invoices
                    </h1>
                    <p class="text-white">For <a class="text-white" href="/Job/Job?ID=@ViewBag.JobID"> @ViewBag.JobName</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid mt--7">
    <!-- Page content -->
    <div class="container mt--8 pb-5">
        <div class="row justify-content-center">
            <div class="col-lg-12 col-md-12">
                <div class="card bg-secondary shadow border-0">

                    <br />
                    <div class="col text-right">
                        @if (ViewBag.Complete == "NotDone" && ViewBag.NoInvoice != "True")
                        {

                            <a href="/Invoice/NewInvoice?ID=@ViewBag.JobID"
                               class="btn btn-primary">New Invoice</a>
                        }
                        </div>
                    <br />

                    <table class="table">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.DateTime)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Paid)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TotalCost)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.JobTitle)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.ClientName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CompanyName)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DateTime)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Paid)
                                </td>
                                <td>
                                    R @Html.DisplayFor(modelItem => item.TotalCost)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.JobTitle)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ClientName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CompanyName)
                                </td>
                                <td>
                                    <a href="Invoice?ID=@Html.DisplayFor(modelItem => item.InvoiceNum)">View</a>
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
