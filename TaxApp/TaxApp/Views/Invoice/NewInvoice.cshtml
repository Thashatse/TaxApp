@model Model.SP_GetJobIntemsToInvoice_Result

@{
    ViewBag.Title = "New Invoice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Header -->
<div class="header bg-gradient-primary py-7 py-lg-8">
    <div class="container">
        <div class="header-body text-center mb-7">
            <div class="row justify-content-center">
                <div class="col-lg-5 col-md-6">
                    <h1 class="text-white">New Invoice</h1>
                    <p class="text-white">For @ViewBag.JobName</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Page content -->
<div class="container mt--8 pb-5">
    <div class="row justify-content-center">
        <div class="col-lg-12 col-md-12">
            <div class="card bg-secondary shadow border-0">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <div>Add line items to the invoice: </div>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        Work Log Hours:
                        <div class="col-md-10">
                            @foreach (var item in ViewBag.Hours)
                            {
                                <input type="checkbox" name="@item.Description" value="@item.ID">
                                @item.DisplayString<br>
                            }
                        </div>

                        Expenses:
                        <div class="col-md-10">
                            @foreach (var item in ViewBag.Expenses)
                            {
                                <input type="checkbox" name="@item.Description" value="@item.ID">
                                @item.DisplayString<br>
                            }
                        </div>

                        Travel Expenses:
                        <div class="col-md-10">
                            @foreach (var item in ViewBag.Travelss)
                            {
                                <input type="checkbox" name="@item.Description" value="@item.ID">
                                @item.DisplayString<br>
                            }
                        </div>
                    </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Create" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
